<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dash"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skribble"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_horizontal"/>
    </RelativeLayout>

    <View
        android:id="@+id/partition"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#262626"
        android:layout_below="@id/rl1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/partition"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/leftBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:src="@drawable/arrow_left" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarIv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"

                android:src="@drawable/avatar_1" />


            <ImageView
                android:id="@+id/rightBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/arrow_right" />

        </LinearLayout>

        <EditText
            android:id="@+id/enterNameEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:autoLink="all"
            android:background="@drawable/c_r_stroke_fun_grey_15"
            android:cursorVisible="false"
            android:gravity="center"
            android:hint="Enter Name"
            android:inputType="textPersonName"
            android:maxLength="9"
            android:minWidth="160dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="@color/text2"
            android:textColorHint="@color/text2" />

        <Button
            android:id="@+id/playPublicBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@drawable/c_r_fun_anahata_15"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Play Public"
            android:textAllCaps="false"
            android:textColor="@color/fun_white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/enterRoomBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/c_r_fun_ajna_15"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Enter Room"
            android:textAllCaps="false"
            android:textColor="@color/fun_white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/createRoomBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/c_r_fun_sahasraha_15"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Create Room"
            android:textAllCaps="false"
            android:textColor="@color/fun_white"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>